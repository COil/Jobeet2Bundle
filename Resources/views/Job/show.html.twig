{% extends 'Jobeet2Bundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/jobeet2/css/job.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block title %}
    {{ job.company }} is looking for {{ job.position }}
{% endblock %}

{% block body %}

{% if app.request.get('token')  == job.token %}
    {% include 'Jobeet2Bundle:Job:_admin.html.twig' %}
{% endif %}

<div id="job">
  <h1>{{ job.company }}</h1>
  <h2>{{ job.location }}</h2>
  <h3>
    {{ job.position }}
    <small> - {{ job.type }}</small>
  </h3>

  {% if job.logo %}
    <div class="logo">
      <a href="{{ job.url }}">
        <img src="{{ asset(job.webPath) }}" alt="{{ job.company }} logo" />
      </a>
    </div>
  {% endif %}

  <div class="description">
    {{ job.description }}
  </div>

  <h4>How to apply?</h4>

  <p class="how_to_apply">{{ job.howToApply }}</p>

  <div class="meta">
    <small>posted on {{ job.createdAt | date("m/d/Y") }}</small>
  </div>

</div>

{% endblock %}